@model IEnumerable<ASP.NET_Core_Mvc_Project.Models.ViewModels.CategoriesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Kategorier</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Gå till kategori","CategoryProducts", new  {selectedCategory = @item.Name} )
                </td>
            </tr>
        }
    </tbody>
</table>
